<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%= site.description %>">
    <meta name="keywords" content="<%= site.keywords %>">
    <meta name="author" content="<%= resume.name %>">
    <meta name="robots" content="index, follow">

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="<%= site.url %>/">
    <meta property="og:title" content="<%= site.title %>">
    <meta property="og:description" content="<%= site.description %>">
    <meta property="og:image" content="<%= site.url %>/og-image.jpg">

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= site.title %>">
    <meta name="twitter:description" content="<%= hero.subtitle %>">

    <!-- Canonical URL -->
    <link rel="canonical" href="<%= site.url %>/">

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>K</text></svg>">

    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@600;700&display=swap" rel="stylesheet">

    <title><%= site.title %></title>

    <!-- Structured Data for SEO -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "<%= resume.name %>",
        "jobTitle": "SEO Strategist & Content Leader",
        "description": "<%= hero.subtitle %>",
        "email": "<%= contact.email %>",
        "telephone": "<%= contact.phone %>",
        "address": {
            "@type": "PostalAddress",
            "addressLocality": "<%= contact.location.split(',')[0] %>",
            "addressRegion": "<%= contact.location.split(',')[1] ? contact.location.split(',')[1].trim() : '' %>",
            "addressCountry": "US"
        },
        "url": "<%= site.url %>",
        "sameAs": [
            "<%= contact.linkedin %>"
        ],
        "knowsAbout": ["SEO", "Content Strategy", "Digital Marketing", "Data Journalism", "Cross-functional Leadership"]
    }
    </script>

    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <!-- Skip to main content for accessibility -->
    <a href="#main" class="skip-link">Skip to main content</a>

    <!-- Navigation -->
    <header class="header" role="banner">
        <nav class="nav container" role="navigation" aria-label="Main navigation">
            <a href="#" class="logo" aria-label="<%= resume.name %> - Home">
                <span class="logo-text"><%= resume.name %></span>
            </a>
            <ul class="nav-links" role="menubar">
                <li role="none"><a href="#about" role="menuitem">About</a></li>
                <li role="none"><a href="#work" role="menuitem">Work</a></li>
                <li role="none"><a href="#expertise" role="menuitem">Expertise</a></li>
                <li role="none"><a href="#contact" role="menuitem">Contact</a></li>
            </ul>
            <button class="mobile-menu-toggle" aria-label="Toggle menu" aria-expanded="false">
                <span class="hamburger"></span>
            </button>
        </nav>
    </header>

    <main id="main" role="main">
        <!-- Hero Section -->
        <section class="hero" aria-labelledby="hero-heading">
            <div class="hero-content container">
                <div class="hero-text">
                    <p class="hero-greeting"><%= hero.greeting %></p>
                    <h1 id="hero-heading" class="hero-title">
                        <%= hero.titleLine1 %>
                        <span class="highlight"><%= hero.titleHighlight1 %></span> <%= hero.titleConnector %>
                        <span class="highlight-alt"><%= hero.titleHighlight2 %></span>
                    </h1>
                    <p class="hero-subtitle"><%= hero.subtitle %></p>
                    <div class="hero-cta">
                        <a href="#work" class="btn btn-primary"><%= hero.ctaPrimary %></a>
                        <a href="#contact" class="btn btn-secondary"><%= hero.ctaSecondary %></a>
                        <a href="resume.html" target="_blank" class="btn btn-outline">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-right: 8px;">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                                <polyline points="14 2 14 8 20 8"/>
                                <line x1="16" y1="13" x2="8" y2="13"/>
                                <line x1="16" y1="17" x2="8" y2="17"/>
                                <polyline points="10 9 9 9 8 9"/>
                            </svg>
                            <%= hero.ctaResume %>
                        </a>
                    </div>
                </div>
                <div class="hero-visual">
                    <div class="hero-image-container">
                        <div class="hero-blob"></div>
                        <div class="hero-photo-wrapper">
                            <img src="<%= site.image %>" alt="<%= resume.name %> - SEO Strategist" class="hero-photo" width="350" height="350">
                        </div>
                        <div class="hero-stats">
                            <div class="stat-card">
                                <span class="stat-number" data-count="<%= hero.stat1.value %>">0</span><span class="stat-suffix"><%= hero.stat1.suffix %></span>
                                <span class="stat-label"><%= hero.stat1.label %></span>
                            </div>
                            <div class="stat-card">
                                <span class="stat-number" data-count="<%= hero.stat2.value %>">0</span><span class="stat-suffix"><%= hero.stat2.suffix %></span>
                                <span class="stat-label"><%= hero.stat2.label %></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="scroll-indicator" aria-hidden="true">
                <span>Scroll to explore</span>
                <div class="scroll-arrow"></div>
            </div>
        </section>

        <!-- Brands Section -->
        <section class="brands" aria-labelledby="brands-heading">
            <div class="container">
                <h2 id="brands-heading" class="section-label"><%= brands.heading %></h2>
                <div class="brands-grid">
                    <% brands.items.forEach((brand, index) => { %>
                    <div class="brand-item" data-aos="fade-up"<% if (index > 0) { %> data-aos-delay="<%= index * 100 %>"<% } %>>
                        <img src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 140 40'%3E%3Ctext x='10' y='28' font-family='Arial' font-size='20' font-weight='bold' fill='<%= encodeURIComponent(brand.color) %>'%3E<%= brand.name %>%3C/text%3E%3C/svg%3E" alt="<%= brand.name %> logo" width="140" height="40" loading="lazy">
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- About Section -->
        <section id="about" class="about" aria-labelledby="about-heading">
            <div class="container">
                <div class="about-grid">
                    <div class="about-content">
                        <span class="section-tag"><%= about.tag %></span>
                        <h2 id="about-heading"><%= about.heading %></h2>
                        <p class="about-lead"><%= about.leadParagraph %></p>
                        <p><%= about.bodyParagraph %></p>
                        <div class="about-highlights">
                            <% about.highlights.forEach(highlight => { %>
                            <div class="highlight-item">
                                <div class="highlight-icon">
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                                        <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
                                    </svg>
                                </div>
                                <div>
                                    <strong><%= highlight.title %></strong>
                                    <p><%= highlight.description %></p>
                                </div>
                            </div>
                            <% }); %>
                        </div>
                    </div>
                    <div class="about-visual">
                        <div class="about-card">
                            <div class="card-decoration"></div>
                            <blockquote>
                                "<%= about.testimonial.quote %>"
                            </blockquote>
                            <cite><%= about.testimonial.author %></cite>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Work/Case Studies Section -->
        <section id="work" class="work" aria-labelledby="work-heading">
            <div class="container">
                <div class="section-header">
                    <span class="section-tag"><%= work.tag %></span>
                    <h2 id="work-heading"><%= work.heading %></h2>
                    <p><%= work.subheading %></p>
                </div>

                <div class="case-studies">
                    <% work.caseStudies.forEach((cs, index) => { %>
                    <!-- Case Study <%= index + 1 %> -->
                    <article class="case-study" data-aos="fade-up"<% if (index > 0) { %> data-aos-delay="<%= index * 100 %>"<% } %>>
                        <div class="case-study-image">
                            <div class="case-study-tag"><%= cs.tag %></div>
                            <div class="case-study-visual visual-<%= index + 1 %>">
                                <div class="visual-icon">
                                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
                                        <% if (index === 0) { %>
                                        <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                                        <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
                                        <% } else if (index === 1) { %>
                                        <line x1="18" y1="20" x2="18" y2="10"/>
                                        <line x1="12" y1="20" x2="12" y2="4"/>
                                        <line x1="6" y1="20" x2="6" y2="14"/>
                                        <% } else { %>
                                        <circle cx="12" cy="12" r="10"/>
                                        <line x1="2" y1="12" x2="22" y2="12"/>
                                        <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
                                        <% } %>
                                    </svg>
                                </div>
                            </div>
                        </div>
                        <div class="case-study-content">
                            <h3><%= cs.title %></h3>
                            <p class="case-study-summary"><%= cs.summary %></p>
                            <div class="case-study-details">
                                <div class="detail-group">
                                    <h4>The Challenge</h4>
                                    <p><%= cs.challenge %></p>
                                </div>
                                <div class="detail-group">
                                    <h4>The Approach</h4>
                                    <p><%= cs.approach %></p>
                                </div>
                                <div class="detail-group results">
                                    <h4>The Results</h4>
                                    <% if (cs.resultStat) { %>
                                    <div class="result-stat">
                                        <span class="result-number"><%= cs.resultStat %></span>
                                        <span class="result-label"><%= cs.resultLabel %></span>
                                    </div>
                                    <% } %>
                                    <p><%= cs.resultDescription %></p>
                                </div>
                            </div>
                            <button class="case-study-toggle" aria-expanded="false">
                                <span>View Details</span>
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                                    <polyline points="6 9 12 15 18 9"/>
                                </svg>
                            </button>
                        </div>
                    </article>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Expertise Section -->
        <section id="expertise" class="expertise" aria-labelledby="expertise-heading">
            <div class="container">
                <div class="section-header">
                    <span class="section-tag"><%= expertise.tag %></span>
                    <h2 id="expertise-heading"><%= expertise.heading %></h2>
                </div>
                <div class="expertise-grid">
                    <% const expertiseIcons = [
                        '<circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/>',
                        '<path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>',
                        '<path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/><polyline points="3.27 6.96 12 12.01 20.73 6.96"/><line x1="12" y1="22.08" x2="12" y2="12"/>',
                        '<polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>',
                        '<circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>',
                        '<path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>'
                    ]; %>
                    <% expertise.items.forEach((item, index) => { %>
                    <div class="expertise-card" data-aos="zoom-in"<% if (index > 0) { %> data-aos-delay="<%= index * 100 %>"<% } %>>
                        <div class="expertise-icon">
                            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                                <%- expertiseIcons[index] || expertiseIcons[0] %>
                            </svg>
                        </div>
                        <h3><%= item.title %></h3>
                        <p><%= item.description %></p>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Contact Section -->
        <section id="contact" class="contact" aria-labelledby="contact-heading">
            <div class="container">
                <div class="contact-content">
                    <div class="contact-text">
                        <span class="section-tag"><%= contact.tag %></span>
                        <h2 id="contact-heading"><%= contact.heading %></h2>
                        <p><%= contact.subheading %></p>

                        <div class="contact-info">
                            <a href="mailto:<%= contact.email %>" class="contact-link">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                                    <polyline points="22,6 12,13 2,6"/>
                                </svg>
                                <%= contact.email %>
                            </a>
                            <a href="tel:+1<%= contact.phone.replace(/[^0-9]/g, '') %>" class="contact-link">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                                </svg>
                                <%= contact.phone %>
                            </a>
                            <p class="contact-location">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                                    <circle cx="12" cy="10" r="3"/>
                                </svg>
                                <%= contact.location %>
                            </p>
                        </div>

                        <div class="social-links">
                            <a href="<%= contact.linkedin %>" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="LinkedIn Profile">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="footer" role="contentinfo">
        <div class="container">
            <p>&copy; <%= footer.copyright %></p>
        </div>
    </footer>

    <!-- AI Chat Widget -->
    <div id="chat-widget" class="chat-widget" aria-label="Chat with <%= resume.name.split(' ')[0] %>'s AI Assistant">
        <button id="chat-toggle" class="chat-toggle" aria-label="Open chat" aria-expanded="false">
            <svg class="chat-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
            </svg>
            <svg class="close-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                <line x1="18" y1="6" x2="6" y2="18"/>
                <line x1="6" y1="6" x2="18" y2="18"/>
            </svg>
        </button>
        <div id="chat-container" class="chat-container" role="dialog" aria-labelledby="chat-title" hidden>
            <div class="chat-header">
                <div class="chat-avatar">
                    <img src="<%= site.image %>" alt="<%= resume.name %>" width="40" height="40">
                </div>
                <div class="chat-header-text">
                    <h3 id="chat-title"><%= chat.title %></h3>
                    <p><%= chat.subtitle %></p>
                </div>
                <button id="chat-close" class="chat-close" aria-label="Close chat">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                        <line x1="18" y1="6" x2="6" y2="18"/>
                        <line x1="6" y1="6" x2="18" y2="18"/>
                    </svg>
                </button>
            </div>
            <div id="chat-messages" class="chat-messages" role="log" aria-live="polite">
                <div class="chat-message bot">
                    <p><%= chat.greeting %></p>
                </div>
                <div class="quick-replies">
                    <% chat.quickReplies.forEach(reply => { %>
                    <button class="quick-reply" data-message="<%= reply.message %>"><%= reply.label %></button>
                    <% }); %>
                </div>
            </div>
            <form id="chat-form" class="chat-form">
                <input type="text" id="chat-input" class="chat-input" placeholder="Ask about my experience..." aria-label="Type your message" autocomplete="off">
                <button type="submit" class="chat-send" aria-label="Send message">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                        <line x1="22" y1="2" x2="11" y2="13"/>
                        <polygon points="22 2 15 22 11 13 2 9 22 2"/>
                    </svg>
                </button>
            </form>
        </div>
    </div>

    <script src="script.js"></script>
</body>
</html>
